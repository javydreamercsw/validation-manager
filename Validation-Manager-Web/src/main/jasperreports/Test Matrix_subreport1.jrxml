	<parameter name="req_id" class="java.lang.Integer">
		<parameterDescription><![CDATA[Requirement ID to look covarage for]]></parameterDescription>
		<defaultValueExpression><![CDATA[1]]></defaultValueExpression>
	</parameter>
	<queryString>
		<![CDATA[SELECT
     test_case.`test_id` AS test_case_test_id
FROM
     `project` project INNER JOIN `project_has_test_project` project_has_test_project ON project.`id` = project_has_test_project.`project_id`
     INNER JOIN `test_project` test_project ON project_has_test_project.`test_project_id` = test_project.`id`
     INNER JOIN `test_plan` test_plan ON test_project.`id` = test_plan.`test_project_id`
     INNER JOIN `test_plan_has_test` test_plan_has_test ON test_plan.`id` = test_plan_has_test.`test_plan_id`
     AND test_plan.`test_project_id` = test_plan_has_test.`test_plan_test_project_id`
     INNER JOIN `test` test ON test_plan_has_test.`test_id` = test.`id`
     INNER JOIN `test_case` test_case ON test.`id` = test_case.`test_id`
     INNER JOIN `requirement_spec` requirement_spec ON project.`id` = requirement_spec.`project_id`
     INNER JOIN `requirement_spec_node` requirement_spec_node ON requirement_spec.`id` = requirement_spec_node.`requirement_spec_id`
     AND requirement_spec.`project_id` = requirement_spec_node.`requirement_spec_project_id`
     AND requirement_spec.`spec_level_id` = requirement_spec_node.`requirement_spec_spec_level_id`
     INNER JOIN `requirement` requirement ON requirement_spec_node.`id` = requirement.`requirement_spec_node_id`
     AND requirement_spec_node.`requirement_spec_id` = requirement.`requirement_spec_node_requirement_spec_id`
WHERE
     requirement.id = $P{req_id}]]>
	</queryString>
